{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/server.js"
      },
      {
        "src": "/",
        "dest": "public/pages/index.html"
      },
      {
        "src": "/(css|js)/(.*)",
        "dest": "public/$1/$2"
      },
      {
        "src": "/(record|view|analytics|goals)",
        "dest": "public/pages/$1.html"
      },
      {
        "src": "/(.*)",
        "dest": "public/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }